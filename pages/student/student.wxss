/* pages/teacher/teacher.wxss */
.head{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 15rpx;
  line-height: 30px;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;  
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.list_top{
  border-bottom: 1px solid #ccc;
  padding: 10rpx 10rpx;
  margin-bottom: 10rpx;
}
.teacher_list{
  padding: 0 15rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  margin: 0 0 10px 0;
}
.special{
  border: 1px solid #7ec6c3;
  padding:0 5rpx;
  margin-left: 20rpx;
  color: #7ec6c3;
}
.width220{
  width: 220px;
}
.need text{
  margin-left: 20px;
}
.need text:first-of-type{
  margin: 0;
}
.alllist
{
  padding: 10px 10px;
}