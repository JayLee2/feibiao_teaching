/* pages/teacher/teacher.wxss */
::-webkit-scrollbar { width: 0; height: 0; color: transparent; }
.head{
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 15rpx;
  line-height: 30px;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;  
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.list_top{
  border-bottom: 1px solid #ccc;
  padding: 10rpx 10rpx;
  margin-bottom: 10rpx;
}
.teacher_list{
  padding: 0 15rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  margin: 0 0 10px 0;
}
.special{
  border: 1px solid #7ec6c3;
  padding:0 5rpx;
  margin-left: 20rpx;
  color: #7ec6c3;
}
.width220{
  width: 220px;
}
.need text{
  margin-left: 20px;
}
.need text:first-of-type{
  margin: 0;
}
.alllist
{
  padding: 10px 10px;
}

.nocontenticon
{
  color:#f6d725;
  font-size: 50px;
}
.nocontent
{
  text-align: center;
  padding: 25% 0 0;
}
.nocontenttext
{
  font-size: 20px;
  font-weight: 600;
  margin: 5% 0 0 0;
  color: #202a36;
}
.alllist
{
  padding: 0 10px 10px 10px;
}
.overflow
{
  width: 100%;
  white-space: nowrap;
  overflow: scroll;
}