/* pages/my_wallect/my_wallect.wxss */
.flex_bottom{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #ccc;
  font-size: 29rpx;
}
.flex_bottom view{
  width: 50%;
  line-height: 100rpx;
  text-align: center;
  height:100rpx;
  background: #9fd4d2;
  color: #fff;
}
.flex_bottom view:first-of-type{
  background: #fff;
  color: #333;
}
.row{
  border-bottom: 4rpx solid #9fd4d2;
  padding-bottom: 10rpx;
  width: 90%;
  margin:10rpx auto
}
.package{
  padding: 10rpx;
  border: 1rpx solid #ccc;
  text-align: center;
  font-size: 30rpx;
  margin-top: 20rpx;  
  margin-left: 35rpx;
  
  width: 180rpx;
  height:40rpx;
  border-radius: 10rpx;
  color: #333;
}
.package_select{
  color: #9fd4d2;
  border-color: #9fd4d2;
}
.page-section{
  margin-bottom: 20rpx;
}
.flex-wrp {display: flex;}
.input {
  width: 88.5%;
  height: 82rpx;
  margin-left: 20rpx;
  margin-top: 5%;
  margin-right: 20rpx;
  font-size: 40rpx;
  line-height: 28rpx;
  border-width: 1rpx;
  border-style: solid;
  padding: 0 20rpx;
  border-color:#9fd4d2;
  box-sizing: border-box;
  color: #333;  
}
.count{
  text-indent: 100%;
}
.viewinput {
  width: 100%;
  height: 82rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  
}
