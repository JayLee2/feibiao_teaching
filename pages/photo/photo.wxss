/* pages/photo/photo.wxss */
.title{
  border-bottom: 1rpx solid #ccc;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  width: 95%;
  box-sizing: border-box;
  margin: auto;
}
.photo_box{
  width: 80%;
  margin:20rpx auto;
  height: 400rpx;
  border: 1rpx solid #9fd4d2;
  border-radius: 10rpx;
  position: relative;
}
.photo_box image{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 1;
  left: 0;
}
.add{
  font-size: 50rpx;
  color: #fff;
  background: #9fd4d2;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: absolute;
  top: 155rpx;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 2;
  border-radius: 50%;
}
.bor{
  width: 100%;
  height: 6rpx;
  background: #ccc;
}
.send{
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin: auto;
  font-size: 24rpx;
  background: #9fd4d2;
  color: #fff;
}