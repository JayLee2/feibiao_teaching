/* pages/my_collect/my_collect.wxss */
.listfit
{
  padding: 10px 10px 0;
}
.img_box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;  
}
.img_box image{
  display: block;
  width: 100%;
  height: 100%;
}
.list_top{
  border-bottom: 1rpx solid #ccc;
  padding: 10rpx 10rpx;
  margin-bottom: 10rpx;
}
.teacher_list{
  padding:20rpx;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  margin: 0 0 10px 0;
}
.special{
  border: 1px solid #7ec6c3;
  padding:0 5rpx;
  margin-left: 20rpx;
  color: #7ec6c3;
}
.icon-xin{
  font-size: 50rpx;
  color: #7ec6c3;
  position:relative;
  top:6rpx;
  right:6rpx;
}
.kong{
  width: 100%;
  height: 100%;
  background: #eee;
  position: fixed;
  top: 0;
  left: 0;
}
.kong image{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 100rpx;
  height: 100rpx;
}
.historyfit
{
  line-height: 30px;
  border-bottom: 1px solid#ccc;
  font-size: 15px;
  font-style: italic;
  font-weight: 600;
}